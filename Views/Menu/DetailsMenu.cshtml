@model MenuItem
@{
    ViewData["Title"] = "Detailed dish information";
}

<h1 class="main-font">@ViewData["Title"]</h1>

<div class="page-content">
    <p>Name of dish: @Model.Name</p>
    <p>Price: @Model.Price</p>
    @* <p>Description: @Model.Description</p> *@
    @if (Model.IsAvailable)
    {
        <p>Available: <input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" checked disabled></p>
    }
    else
    {
        <p>Available: <input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" disabled></p>
    }
    @if (Model.IsPopular)
    {
        <p>Popular: <input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" checked disabled></p>
    }
    else
    {
        <p>Popular: <input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" disabled></p>
    }
    <div class="page-content-btn">
        <form method="get" asp-controller="Menu" asp-action="EditMenu" style="display:inline;">
            <input type="hidden" name="menuItemId" value="@Model.MenuItemId" />
            <button type="submit" class="btn btn-warning btn-margin">Edit</button>
        </form>
        <form method="post" asp-controller="Menu" asp-action="DeleteMenu" style="display:inline;">
            <input type="hidden" name="menuItemId" value="@Model.MenuItemId" />
            <button type="submit" class="btn btn-danger btn-margin" onclick="return confirm('Are you sure you want to delete this menu item?');">Delete</button>
        </form>

        <a asp-controller="Menu" asp-action="IndexMenu" class="btn btn-primary btn-margin">Return to menu page</a>
    </div>
</div>
